
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SignUp</h2>

<form name="myForm" action="" onsubmit="" method="post">
    <input type="text" name="name" class="form-control" placeholder="Enter your name"> <br> <br>
    <input type="text" name="email" class="form-control" placeholder="Enter your email"> <br> <br>
    <input type="text" name="PhoneNumber" class="form-control" placeholder="Enter your contact"> <br> <br>
    <input type="password" name="password" class="form-control" placeholder="Enter your password"> <br> <br>
    <input type="text" name="location" class="form-control" placeholder="Enter your location"> <br> <br>
    <input name="submit" type="submit" value="Signup">
</form>